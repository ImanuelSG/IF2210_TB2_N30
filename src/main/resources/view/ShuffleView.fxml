<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Shuffle-->
<StackPane prefWidth="1000" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ShuffleController">
    <HBox alignment="CENTER" style="-fx-padding: 20px;">
        <fx:include source="/view/LadangKu.fxml" />
    </HBox>
    <VBox   fx:id="shufflePopUp" alignment="CENTER"  style="-fx-background-radius: 20px; -fx-border-radius: 20px; -fx-background-color: rgba(255, 255, 255, 0.5); -fx-border-color: #000000;">
        <GridPane fx:id="shuffleCards" hgap="10"  vgap="20" alignment="CENTER" style="-fx-padding: 10px; -fx-background-color: transparent;">

        </GridPane>
        <HBox alignment="CENTER" style="-fx-spacing: 20px;">
            <Button fx:id="reshuffleButton" onAction="#handleReshuffleButton" prefHeight="38.0" prefWidth="77.0" text="Re-Shuffle" stylesheets="/view/styles.css" styleClass="brownButton" />
            <Button fx:id="accButton" onAction="#handleAccButton" prefHeight="39.0" prefWidth="73.0" text="Pilih Kartu" stylesheets="/view/styles.css" styleClass="greenButton" />
        </HBox>
    </VBox>
</StackPane>
